{
  "name": "enforce-aks-private-cluster",
  "type": "Microsoft.Authorization/policyDefinitions",
  "properties": {
    "displayName": "Require AKS private cluster",
    "policyType": "Custom",
    "mode": "All",
    "description": "Requires AKS to be deployed as a private cluster (apiServerAccessProfile.enablePrivateCluster=true). Consider setting effect to Audit first to avoid disrupting existing clusters.",
    "metadata": {
      "category": "Security"
    },
    "parameters": {
      "effect": {
        "type": "String",
        "metadata": {
          "displayName": "Effect"
        },
        "allowedValues": [
          "Deny",
          "Audit",
          "Disabled"
        ],
        "defaultValue": "Audit"
      }
    },
    "policyRule": {
      "if": {
        "allOf": [
          {
            "field": "type",
            "equals": "Microsoft.ContainerService/managedClusters"
          },
          {
            "anyOf": [
              {
                "field": "Microsoft.ContainerService/managedClusters/apiServerAccessProfile.enablePrivateCluster",
                "notEquals": "true"
              },
              {
                "field": "Microsoft.ContainerService/managedClusters/apiServerAccessProfile.enablePrivateCluster",
                "exists": "false"
              }
            ]
          }
        ]
      },
      "then": {
        "effect": "[parameters('effect')]"
      }
    }
  }
}
