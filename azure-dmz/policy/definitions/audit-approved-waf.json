{
  "name": "audit-approved-waf",
  "type": "Microsoft.Authorization/policyDefinitions",
  "properties": {
    "displayName": "Audit workloads not fronted by approved WAF (tag-based signal)",
    "policyType": "Custom",
    "mode": "Indexed",
    "description": "Audits resources missing an onboarding tag indicating they are fronted by an approved WAF. Use tags or a CMDB-driven approach for broad applicability.",
    "metadata": {
      "category": "Security"
    },
    "parameters": {
      "requiredTagName": {
        "type": "String",
        "defaultValue": "approvedWafFronted"
      },
      "requiredTagValue": {
        "type": "String",
        "defaultValue": "true"
      }
    },
    "policyRule": {
      "if": {
        "field": "tags[parameters('requiredTagName')]",
        "notEquals": "[parameters('requiredTagValue')]"
      },
      "then": {
        "effect": "Audit"
      }
    }
  }
}
